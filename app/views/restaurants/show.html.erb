<div class="container text-center">
  <div>
    <h1><%= @restaurant.name %></h1>
    <h2><%= @restaurant.category.capitalize %> - Restaurant</h2>
    <p>Adresse: <%= @restaurant.address %></p>
    <p>Numeros de telephone: <%= @restaurant.phone_number %></p>
  </div>
  <div>
    <% unless @reviews.empty? %>
      <h3>Heres is the last reviews: </h3>
      <%= render "restaurant_review" %>
    <% else %>
      <h3>Not review yet</h3>
      <%end%>
  </div>
  <div>
  <div class="container item-center">
    <h3 class="text-center">You want to review <%= @restaurant.name %> ?</h3>
    <%= render "review_form" %>
  </div>
  <%= link_to "go back to index", restaurants_path, class: "btn btn-primary", style:"margin-top: 10px"%>
</div>
